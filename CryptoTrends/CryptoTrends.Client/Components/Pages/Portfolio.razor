@page "/portfolio"
@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage
@rendermode InteractiveWebAssembly



@if (!isLoaded)
{
    <p>Ładowanie…</p>
}
else
{
    <p role="status">Current count: @currentCount</p>
    <button class="btn btn-primary" @onclick="IncrementCount">Increment count</button>
}



@code {
    private int currentCount = 0;
    private bool isLoaded = false;

    private void IncrementCount()
    {
        currentCount++;
        localStorage.SetItem("count", currentCount);
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var stored = localStorage.GetItem<int>("count");
            currentCount = stored;
            isLoaded = true;
            StateHasChanged();   // wymuszamy ponowne renderowanie po odczycie
        }

        return Task.CompletedTask;
    }
}
