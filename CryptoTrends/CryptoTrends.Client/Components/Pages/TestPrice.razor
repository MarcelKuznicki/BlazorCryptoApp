@page "/testprices"
@rendermode InteractiveWebAssembly
@using Newtonsoft.Json
@using CryptoTrends.Client.Components.Models

<h3>Top Cryptocurrencies</h3>

<style>
    h3 {
        color: #007bff;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    table {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
        background: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        table thead th {
            background: #007bff;
            color: white;
            padding: 12px 10px;
            font-weight: 600;
            text-align: left;
            font-size: 0.95rem;
        }

        table tbody tr {
            transition: background-color 0.2s;
        }

            table tbody tr:hover {
                background-color: rgba(0, 123, 255, 0.08);
            }

        table td {
            padding: 12px 10px;
            border-bottom: 1px solid #eee;
            font-size: 0.95rem;
        }

        table tbody tr:last-child td {
            border-bottom: none;
        }

    td.positive {
        color: #28a745;
        font-weight: 600;
    }

    td.negative {
        color: #dc3545;
        font-weight: 600;
    }

    p {
        font-size: 1rem;
        color: #555;
    }

    .pagination {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 0.5rem;
    }

        .pagination button {
            padding: 0.4rem 0.8rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
        }

            .pagination button.disabled {
                background-color: #ccc;
                cursor: not-allowed;
            }
</style>

@if (_prices == null)
{
    <p>Loading...</p>
}
else
{
    <table>
        <colgroup>
            <col style="width: 5%;">
            <col style="width: 35%;">
            <col style="width: 30%;">
            <col style="width: 30%;">
            <col style="width: 10%;">
        </colgroup>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price (USD)</th>
                <th>Market Cap (USD)</th>
                <th>24h Change (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var crypto in GetPageItems())
            {
                var index = _prices.IndexOf(crypto);
                var change = Math.Round((double)crypto.PriceChange24h, 2);
                <tr>
                    <td>@(index + 1)</td>
                    <td>@crypto.Name (@crypto.Symbol.ToUpper())</td>
                    <td>$@crypto.CurrentPrice.ToString("N2")</td>
                    <td>@FormatMarketCap(crypto.MarketCap)</td>
                    <td class="@(change >= 0 ? "positive" : "negative")">@change%</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        <button @onclick="PrevPage" class="@(CurrentPage == 1 ? "disabled" : "")" disabled="@(CurrentPage == 1)">Prev</button>
        <span>Page @CurrentPage of @TotalPages</span>
        <button @onclick="NextPage" class="@(CurrentPage == TotalPages ? "disabled" : "")" disabled="@(CurrentPage == TotalPages)">Next</button>
    </div>
}

@code {
    private List<CryptoMarket> _prices;
    private bool _running = true;
    private int CurrentPage = 1;
    private int PageSize = 10;

    private int TotalPages => _prices == null ? 1 : (int)Math.Ceiling((double)_prices.Count / PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadPrices();
        _ = RefreshLoop();
    }

    private async Task RefreshLoop()
    {
        while (_running)
        {
            try
            {
                await Task.Delay(60000);
                await LoadPrices();
            }
            catch (Exception ex)
            {
                Console.WriteLine("RefreshLoop error: " + ex);
            }
        }
    }

    private string FormatMarketCap(decimal value) => "$" + value.ToString("N0");

    private async Task LoadPrices()
    {
        try
        {
            using var http = new HttpClient();
            var url = "https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=50&page=1";
            var response = await http.GetAsync(url);
            response.EnsureSuccessStatusCode();
            var json = await response.Content.ReadAsStringAsync();
            _prices = JsonConvert.DeserializeObject<List<CryptoMarket>>(json);
        }
        catch (Exception ex)
        {
            Console.WriteLine("LOAD ERROR: " + ex);
        }
    }

    private IEnumerable<CryptoMarket> GetPageItems()
    {
        if (_prices == null) return Enumerable.Empty<CryptoMarket>();
        return _prices.Skip((CurrentPage - 1) * PageSize).Take(PageSize);
    }

    private void PrevPage()
    {
        if (CurrentPage > 1) CurrentPage--;
    }

    private void NextPage()
    {
        if (CurrentPage < TotalPages) CurrentPage++;
    }

    public class CryptoMarket
    {
        public string Id { get; set; }
        public string Symbol { get; set; }
        public string Name { get; set; }
        [JsonProperty("current_price")] public decimal CurrentPrice { get; set; }
        [JsonProperty("market_cap")] public decimal MarketCap { get; set; }
        [JsonProperty("price_change_percentage_24h")] public decimal PriceChange24h { get; set; }
    }

    public void Dispose()
    {
        _running = false;
    }
}
